<%- include('../header') %>

<div class="container">
    <div class="auth-container">
        <div class="auth-box">
            <h2>회원가입</h2>
            
            <% if (error) { %>
            <div class="alert alert-error">
                <%= error %>
            </div>
            <% } %>
            
            <form action="/auth/register" method="POST" class="auth-form" id="register-form">
                <div class="form-group">
                    <label for="username">사용자명</label>
                    <input type="text" id="username" name="username" required autofocus>
                </div>
                
                <div class="form-group">
                    <label for="email">이메일</label>
                    <input type="email" id="email" name="email" required>
                </div>
                
                <div class="form-group">
                    <label for="password">비밀번호</label>
                    <input type="password" id="password" name="password" required minlength="6">
                    <small class="form-text">최소 6자 이상 입력해주세요</small>
                </div>
                
                <div class="form-group">
                    <label for="password-confirm">비밀번호 확인</label>
                    <input type="password" id="password-confirm" name="passwordConfirm" required>
                </div>
                
                <button type="submit" class="btn btn-primary btn-block">회원가입</button>
            </form>
            
            <div class="auth-links">
                <p>이미 계정이 있으신가요? <a href="/auth/login">로그인</a></p>
            </div>
        </div>
    </div>
</div>

<style>
.form-text {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.875rem;
    color: #6c757d;
}
</style>

<script>
document.getElementById('register-form').addEventListener('submit', function(e) {
    const password = document.getElementById('password').value;
    const passwordConfirm = document.getElementById('password-confirm').value;
    
    if (password !== passwordConfirm) {
        e.preventDefault();
        alert('비밀번호가 일치하지 않습니다.');
        return false;
    }
});
</script>

<%- include('../footer') %>
