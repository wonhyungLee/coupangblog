    const lines = parseInt(document.getElementById('final-lines').textContent);
    
    try {
        const response = await fetch('/game/score', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                game: 'tetris',
                playerName,
                score,
                level,
                lines
            })
        });
        
        if (response.ok) {
            // Update high score if needed
